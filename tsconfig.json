{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node10",
    "useDefineForClassFields": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "preserve",
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src/**.ts"]
}
